<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Athkari</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">
    <script src="~/js/script.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: arabic-flat;
            background-image: linear-gradient(to top, #d5d4d0 0%, #d5d4d0 1%, #eeeeec 31%, #efeeec 75%, #e9e9e7 100%);
            text-align: center;
        }
        @@media (prefers-color-scheme: dark) {
            body

        {
            background-color: #121212;
            background-image: none;
            color: #e0e0e0;
        }

        }
    </style>

</head>
<body>

    <div class="cards-grid">
        <div class="cards">
            <a asp-controller="Home" asp-action="Altheker" style="text-decoration: none; color: inherit;">
                <div class="cards-background" style="background-image: url('@Url.Content("~/images/thekerimage.jpg")');"></div>
                @* <div class="cards-background" style="background-image: url(@Url.Content("~/images/thekerimage.jpg"));"></div> *@

                <div class="cards-category">الذكر</div>
            </a>
        </div>

        <div class="cards">
            <a asp-controller="Home" asp-action="quran" style="text-decoration: none; color: inherit;">
                <div class="cards-background" style="background-image: url('@Url.Content("~/images/quranimage.jpg")');"></div>
                <div class="cards-category">القران الكريم</div>
            </a>
        </div>

        <div class="cards">
            <a asp-controller="Home" asp-action="duaa" style="text-decoration: none; color: inherit;">
                <div class="cards-background" style="background-image: url('@Url.Content("~/images/duaaimage.jpg")');"></div>
                <div class="cards-category">أدعيتي</div>
            </a>
        </div>
    </div>

    <!-- المسبحه  -->
    <div class="fluid-container">
        <div id="shelf"></div>
        <div id="head">مُسبح📿</div>
        <div id="line">
            <p id="score">0</p>
            <h1 id="tasbe7">سبحان الله و بحمده</h1>
        </div>
        <div onclick="count()" id="circle"><p id="text">ابدأ</p></div>
    </div>

    <!-- نهاية المسبحه -->
</body>
</html>