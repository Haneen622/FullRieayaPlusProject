@model AdvSwProject.Models.User
@{
    Layout = null;                 // احذفيه لو بدك تستخدمين _Layout
    ViewData["Title"] = "User Profile";
    var profile = Model.Profile ?? new AdvSwProject.Models.UserProfile { UserId = Model.Id };
    string avatar = string.IsNullOrWhiteSpace(profile.AvatarUrl)
          ? "https://i.pravatar.cc/300?img=65"
          
        : profile.AvatarUrl!;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px)
        }

        to {
            opacity: 1;
            transform: translateY(0)
        }

        }

        .animate-fade-in {
            animation: fadeIn .5s ease-out forwards
        }
    </style>
</head>
<body class="bg-gradient-to-r from-[#7BCDF0] to-[#5fb8db] min-h-screen flex items-center justify-center p-4">
    <div class="relative bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-4xl w-full p-6 sm:p-8 animate-fade-in">

        <a href="@Url.Action("Index", "Home")"
           class="absolute left-4 top-4 inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-[#7BCDF0] hover:bg-[#65b9de] text-white shadow">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 11-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            Back
        </a>

        <div class="flex flex-col md:flex-row">
            <!-- Sidebar -->
            <div class="md:w-1/3 text-center mb-8 md:mb-0">
                <img src="@avatar" alt="Profile Picture"
                     class="rounded-full w-44 h-44 mx-auto mb-4 border-4 border-[#7BCDF0] object-cover" />
                <h1 class="text-2xl sm:text-3xl font-extrabold text-[#0f3a4a] dark:text-white mb-1">
                    @(string.IsNullOrWhiteSpace(profile.FullName) ? Model.Username : profile.FullName)
                </h1>
                <p class="text-lg sm:text-xl text-gray-700 dark:text-gray-300">
                    Age: <span>@(profile.Age?.ToString() ?? "—")</span> years
                </p>

                <button id="editBtn"
                        class="mt-5 inline-flex items-center gap-2 bg-[#7BCDF0] hover:bg-[#65b9de] text-white text-base sm:text-lg px-5 py-3 rounded-xl shadow-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path d="M17.414 2.586a2 2 0 00-2.828 0L6 11.172V14h2.828l8.586-8.586a2 2 0 000-2.828z" /><path fill-rule="evenodd" d="M4 16a2 2 0 002 2h8a2 2 0 002-2V9a1 1 0 112 0v7a4 4 0 01-4 4H6a4 4 0 01-4-4V6a4 4 0 014-4h7a1 1 0 010 2H6a2 2 0 00-2 2v10z" clip-rule="evenodd" /></svg>
                    Edit Profile
                </button>
                <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" style="position: absolute;right: 3%;top: 2%;"
                            class="mt-2 inline-flex items-center gap-2 bg-red-500 hover:bg-red-600
                   active:bg-red-700 text-white text-base sm:text-lg px-5 py-3
                   rounded-xl shadow-lg transition-colors duration-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H7a2 2 0 01-2-2V7a2 2 0 012-2h4a2 2 0 012 2v1" />
                        </svg>
                        Logout
                    </button>
                </form>
                @* here *@
                <form id="deleteForm"
                      asp-controller="Profile"
                      asp-action="DeleteMe"
                      method="post"
                      class="mt-3">
                    @Html.AntiForgeryToken()
                    <button type="button"
                            onclick="confirmDelete()"
                            class="mt-2 inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 active:bg-red-800
                   text-white text-base sm:text-lg px-5 py-3 rounded-xl shadow-lg transition-colors duration-200">
                        <!-- أيقونة صغيرة -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M9 3h6a1 1 0 0 1 1 1v1h4v2H4V5h4V4a1 1 0 0 1 1-1z" />
                            <path d="M6 9h12l-1 11a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2L6 9z" />
                        </svg>
                        Delete my account
                    </button>
                </form>

                <script>
                    function confirmDelete() {
                      if (confirm("⚠️ هل أنت متأكد من حذف حسابك نهائيًا؟ لا يمكن التراجع.")) {
                        document.getElementById('deleteForm').submit();
                      }
                    }
                </script>



               

            </div>

            <!-- Main -->
            <div class="md:w-2/3 md:pr-8 md:pl-0">
                <h2 class="text-xl font-semibold text-[#7BCDF0] mb-3">Basic Information</h2>
                <ul class="space-y-3 text-gray-800 dark:text-gray-200 mb-8 text-lg">
                    <li class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 text-[#7BCDF0]" viewBox="0 0 20 20" fill="currentColor"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" /><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" /></svg>
                        <span>Email: @Model.Email</span>
                    </li>
                    <li class="flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 text-[#7BCDF0]" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" /></svg>
                        <span>City: @(string.IsNullOrWhiteSpace(profile.City) ? "—" : profile.City)</span>
                    </li>
                </ul>

                <h2 class="text-xl font-semibold text-[#7BCDF0] mb-3">About Me</h2>
                <p class="text-gray-800 dark:text-gray-200 leading-8 text-lg">
                    @(string.IsNullOrWhiteSpace(profile.About) ? "—" : profile.About)
                </p>

                <h2 class="text-xl font-semibold text-[#7BCDF0] mt-8 mb-3">Skills & Hobbies</h2>
             
                <div id="skillsWrap" class="flex flex-wrap gap-2 mb-2">
                    @if (Model.UserSkills != null && Model.UserSkills.Any())
                    {
                        foreach (var s in Model.UserSkills.Select(us => us.Skill).OrderBy(s => s.Name))
                        {
                            <span class="px-3 py-1 rounded-full text-sm border border-[#7BCDF0]
                                 bg-[#7BCDF0]/10 text-[#0f3a4a] transition-colors duration-200
                                 hover:bg-[#7BCDF0] hover:text-white hover:border-[#65b9de]">
                                @s.Name
                            </span>
                        }
                    }
                    else
                    {
                        <span class="text-gray-500 dark:text-gray-400">—</span>
                    }
                </div>

                <p class="text-sm text-gray-500 dark:text-gray-400">(You can edit these in the Edit Profile window)</p>
            </div>
        </div>
        
    </div>

    <!-- Modal -->
    <div id="editModal" class="hidden fixed inset-0 z-50">
        <div class="absolute inset-0 bg-black/50" aria-hidden="true"></div>
        <div role="dialog" aria-modal="true" class="absolute inset-0 flex items-center justify-center p-4">
            <div class="w-full max-w-2xl rounded-2xl bg-white dark:bg-gray-900 shadow-2xl ring-1 ring-black/5">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 flex items-center justify-between">
                    <h3 class="text-lg sm:text-xl font-bold text-[#0f3a4a] dark:text-white">Edit Profile</h3>
                    <button id="closeModal" class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Close">✕</button>
                </div>

                <!-- POST: /Profile/Edit -->
                <form asp-action="Edit" asp-controller="Profile" method="post" class="px-6 pt-4 pb-6 space-y-4">
                    @Html.AntiForgeryToken()
                    @* <input type="hidden" name="UserId" value="@Model.Id" /> *@

                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <label class="block">
                            <span class="block text-sm font-medium mb-1">Full name</span>
                            <input name="FullName" type="text" value="@profile.FullName"
                                   class="w-full rounded-xl border-gray-300 p-3" />
                        </label>
                        <label class="block">
                            <span class="block text-sm font-medium mb-1">Age</span>
                            <input name="Age" type="number" min="1" max="120" value="@(profile.Age?.ToString() ?? "")"
                                   class="w-full rounded-xl border-gray-300 p-3" />
                        </label>
                    </div>

                    <label class="block">
                        <span class="block text-sm font-medium mb-1">City</span>
                        <input name="City" type="text" value="@profile.City" class="w-full rounded-xl border-gray-300 p-3" />
                    </label>

                    <label class="block">
                        <span class="block text-sm font-medium mb-1">Avatar URL</span>
                        <input name="AvatarUrl" type="url" value="@profile.AvatarUrl" class="w-full rounded-xl border-gray-300 p-3" />
                    </label>

                    <label class="block">
                        <span class="block text-sm font-medium mb-1">About</span>
                        <textarea name="About" rows="5" class="w-full rounded-xl border-gray-300 p-3">@profile.About</textarea>
                    </label>

                    <label class="block">
                        <span class="block text-sm font-medium mb-1">Skills/Hobbies (comma separated)</span>
                        <input name="SkillsCsv" type="text"
                               value="@(string.Join(", ", Model.UserSkills?.Select(us => us.Skill.Name) ?? Array.Empty<string>()))"
                               class="w-full rounded-xl border-gray-300 p-3" />
                    </label>

                    <div class="flex items-center justify-end gap-3 pt-2">
                        <button type="button" id="cancelBtn" class="px-4 py-2 rounded-xl bg-gray-200">Cancel</button>
                        <button type="submit" class="px-5 py-2.5 rounded-xl bg-[#7BCDF0] text-white font-semibold shadow">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    

    <script>
        const editBtn = document.getElementById('editBtn');
        const editModal = document.getElementById('editModal');
        const closeModal = document.getElementById('closeModal');
        const cancelBtn = document.getElementById('cancelBtn');
        const openModal = () => editModal.classList.remove('hidden');
        const closeModalFn = () => editModal.classList.add('hidden');
        editBtn.addEventListener('click', openModal);
        closeModal.addEventListener('click', closeModalFn);
        cancelBtn.addEventListener('click', closeModalFn);
        window.addEventListener('keydown', e => { if (e.key === 'Escape') closeModalFn(); });
    </script>
    @* here *@
  

</body>
</html>
